<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLilypad"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#f1fae6">

        <TextView
            android:id="@+id/b"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="100dp"
            android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp" />

        <TextView
            android:id="@+id/e"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="100dp"
            android:text="Monday"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/f"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="80dp"
            android:text="25"
            android:textAlignment="center"
            android:textSize="80dp" />

        <TextView
            android:id="@+id/c"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-200dp"
            android:layout_marginBottom="75dp"
            android:layout_toStartOf="@+id/e"
            android:text="Start or Play"
            android:textAlignment="center" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical"
        android:background="#365467">

        <ImageButton
            android:layout_width="190dp"
            android:layout_height="145dp"
            android:background="#349ba4"
            android:src="@drawable/ic_view_list_black_24dp" />
        <ImageButton
            android:layout_width="203dp"
            android:layout_height="145dp"
            android:layout_marginLeft="195dp"
            android:background="#349ba4"
            android:src="@drawable/ic_message_black_24dp" />

        <ImageButton
            android:layout_width="190dp"
            android:layout_height="145dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"
            android:background="#349ba4"
            android:src="@drawable/ic_folder_open_black_24dp" />

        <ImageButton
            android:layout_width="203dp"
            android:layout_height="145dp"
            android:layout_marginLeft="195dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"
            android:background="#349ba4"
            android:src="@drawable/ic_person_black_24dp" />
    </RelativeLayout>

</LinearLayout>