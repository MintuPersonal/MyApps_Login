<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_dashboard_tab"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="#f5815a"
            android:text="FLAT UI KIT"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="300dp"
            android:background="#f8b256"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/b"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/ic_flare_black_24dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="45dp"/>

            <TextView
                android:id="@+id/d"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="10.30"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/e"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:text="Jan 10, 2014"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/f"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="40dp"
                android:text="25 *"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/c"
                android:layout_width="190dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:text="Bangladesh"
                android:textAlignment="center"
                android:textColor="#ffffff" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="210dp">

            <ImageButton
                android:layout_width="190dp"
                android:layout_height="145dp"
                android:background="#95d7e8"
                android:src="@drawable/ic_drafts_black_24dp" />

            <ImageButton
                android:layout_width="190dp"
                android:layout_height="145dp"
                android:layout_marginTop="155dp"
                android:background="#666666"
                android:src="@drawable/ic_cloud_upload_black_24dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="300dp"
            android:background="#b54a56"
            android:layout_marginLeft="410dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/bb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/ic_airplanemode_active_black_24dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="45dp"/>

            <TextView
                android:id="@+id/dd"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="10.30"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/ee"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:text="Jan 10, 2014"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/ff"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="40dp"
                android:text="25 *"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/cc"
                android:layout_width="190dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:text="Bangladesh"
                android:textAlignment="center"
                android:textColor="#ffffff" />


        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#f5815a"
            android:drawableLeft="@drawable/ic_pageview_black_24dp"
            android:gravity="center"
            android:scaleType="fitStart"
            android:text=" WWW"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="45dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="#f8b256"
            android:src="@drawable/ic_access_time_black_24dp" />
        <ImageButton
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="#dfdfdf"
            android:src="@drawable/ic_pie_chart_black_24dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="#95d7e8"
            android:gravity="center"
            android:scaleType="matrix"
            android:drawableLeft="@drawable/ic_library_music_black_24dp"
            android:text="NOW PLAYING"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>